{
  "name": "task-duck-server",
  "version": "3.2.0",
  "description": "Task Duck â€” AI-powered scope discipline tool",
  "type": "module",
  "main": "dist/server/index.js",
  "scripts": {
    "start": "node dist/server/index.js",
    "dev": "concurrently -n srv,cli -c blue,green \"npm run dev:server\" \"npm run dev:client\"",
    "dev:server": "tsx --watch server/src/index.ts",
    "dev:client": "node build-client.mjs --watch",
    "build": "npm run build:server && npm run build:client",
    "build:server": "node build-server.mjs",
    "build:client": "node build-client.mjs",
    "hash": "tsx hash-password.ts",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "express": "^4.21.0",
    "bcryptjs": "^2.4.3",
    "dotenv": "^16.4.7"
  },
  "devDependencies": {
    "typescript": "^5.7.0",
    "esbuild": "^0.24.0",
    "tsx": "^4.19.0",
    "concurrently": "^9.1.0",
    "@types/express": "^5.0.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/node": "^22.10.0"
  }
}
