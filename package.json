{
  "name": "task-duck-server",
  "version": "4.0.0",
  "description": "Task Duck â€” AI-powered scope discipline tool",
  "type": "module",
  "main": "dist/server/index.js",
  "scripts": {
    "start": "node dist/server/index.js",
    "dev": "concurrently -n srv,cli -c blue,green \"npm run dev:server\" \"npm run dev:client\"",
    "dev:server": "tsx --watch server/src/index.ts",
    "dev:client": "node build-client.mjs --watch",
    "build": "npm run build:server && npm run build:client",
    "build:server": "node build-server.mjs",
    "build:client": "node build-client.mjs",
    "hash": "tsx hash-password.ts",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:server": "vitest run --project server",
    "test:client": "vitest run --project client",
    "test:e2e": "vitest run tests/e2e/"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "dotenv": "^16.4.7",
    "express": "^4.21.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/express": "^5.0.0",
    "@types/node": "^22.10.0",
    "@types/supertest": "^6.0.3",
    "@vitest/coverage-v8": "^4.0.18",
    "@vitest/ui": "^4.0.18",
    "concurrently": "^9.1.0",
    "esbuild": "^0.25.0",
    "happy-dom": "^20.7.0",
    "supertest": "^7.2.2",
    "tsx": "^4.19.0",
    "typescript": "^5.7.0",
    "vitest": "^4.0.18"
  }
}
